    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.bootstrap5.min.js"></script>

    <script>
      $(document).ready(function() {
        $('#tabel-paket').DataTable({
          "language": {
            "url": "https://cdn.datatables.net/plug-ins/2.0.8/i18n/id.json"
          }
        });
      });
    </script>

    <script>
      const countdownElement = document.getElementById('countdown-timer');
      if (countdownElement) {
        const endDate = new Date(countdownElement.dataset.endDate).getTime();
        const interval = setInterval(function() {
          const now = new Date().getTime();
          const distance = endDate - now;
          if (distance < 0) {
            clearInterval(interval);
            countdownElement.innerHTML = "PENDAFTARAN DITUTUP";
            return;
          }
          const days = Math.floor(distance / (1000 * 60 * 60 * 24));
          const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
          const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
          const seconds = Math.floor((distance % (1000 * 60)) / 1000);
          countdownElement.innerHTML = `
            <div class='text-center mx-2'><span>${days}</span><div>Hari</div></div>
            <div class='text-center mx-2'><span>${hours}</span><div>Jam</div></div>
            <div class='text-center mx-2'><span>${minutes}</span><div>Menit</div></div>
            <div class='text-center mx-2'><span>${seconds}</span><div>Detik</div></div>
          `;
        }, 1000);
      }
    </script>

    <script>
      const jumlahJamaahEl = document.getElementById('jumlahJamaah');
      const tipeKamarEl = document.getElementById('tipeKamar');
      const totalBiayaEl = document.getElementById('totalBiaya');

      if (jumlahJamaahEl && tipeKamarEl && totalBiayaEl) {
        const hargaDasar = parseFloat(totalBiayaEl.dataset.hargaDasar);

        function hitungTotal() {
          const jumlah = parseInt(jumlahJamaahEl.value);
          const tambahanKamar = parseFloat(tipeKamarEl.value);
          const total = (hargaDasar + tambahanKamar) * jumlah;
          totalBiayaEl.textContent = 'Rp ' + total.toLocaleString('id-ID');
        }

        jumlahJamaahEl.addEventListener('input', hitungTotal);
        tipeKamarEl.addEventListener('change', hitungTotal);
      }
    </script>

  </body>
</html>